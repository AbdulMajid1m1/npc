    <style type='text/css'>
          @page {
        size: landscape;
    }
        body {
            font-family: 'Roboto Condensed', sans-serif;
            color: black;
            display: table;
            font-family: 'Oswald', sans-serif;
            font-size: 14px;
            text-align: center;
            /* width: calc(100% - 20px); */
            width: auto;
            height: auto;
            padding: 10px 10px 20px 10px;
        }

        p {
